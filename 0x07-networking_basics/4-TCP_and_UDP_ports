#!/usr/bin/env  bash


echo "Listening Ports:"
echo "----------------"

# Use the lsof command to list open files
# Filter for only listening sockets (state = LISTEN)
# Show the process ID (pid), process name (comm), and port (:<port>)
lsof -i -P -n | grep LISTEN | awk '{print $2, $1, $9}'

# The output should show the PID, process name, and the port in the format:
# PID   process name   port

